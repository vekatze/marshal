import {
  binary-builder.entity {builder},
  core.binary {binary},
  core.cell {mutate},
}

data marshal(a) {
| Marshal(
    encode: (buffer: &builder, value: &a) -> unit,
    decode: (bytes: &binary, cursor: &cell(int)) -> ?a,
    necess: (a) -> meta a,
  )
}

define _proceed(cursor: &cell(int), offset: int): unit {
  mutate(cursor, function (x) {
    quote {add-int(x, offset)}
  })
}
