import {
  this.move.common.get {get-int8},
  this.move.common.put {put-int8},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-handle {get-handle},
  this.rule.put-handle {put-handle},
  this.rule.sero {Sero, sero},
}

define _put(h: &put-handle, x: &bool): unit {
  if *x {
    put-int8(h, 1)
  } else {
    put-int8(h, 0)
  }
}

define _get(h: &get-handle): ?meta bool {
  try v = get-int8(h) in
  Right(quote {eq-int8(v, 1)})
}

inline bool-sero: sero(bool, bool) {
  Sero of {
    put = _put,
    get = _get,
  }
}

define zen(): unit {
  pin val = True in
  match decode(bool-sero, encode(bool-sero, val, 1)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    let v = v in
    if v {
      print("true\n")
    } else {
      print("false\n")
    }
  }
}
