import {
  core.box {axiom-T},
  core.float.show {show-float},
  this.move.common.get {get-int64},
  this.move.common.save {get, save-float64},
  this.move.create-decode-handle {from-bytes},
  this.move.create-encode-handle {create-encode-handle},
  this.rule.decode-handle {decode-handle},
  this.rule.encode-handle {encode-handle},
  this.rule.marshal {Marshal, marshal},
}

define encode-float64(h: &encode-handle, x: &float64): unit {
  save-float64(h, *x)
}

define decode-float64(h: &decode-handle): ?meta float64 {
  try v = get-int64(h) in
  Right(quote {magic cast(int64, float64, v)})
}

inline as-marshal: marshal(float64, float64) {
  Marshal of {
    encode = encode-float64,
    decode = decode-float64,
  }
}

define zen(): unit {
  let h-save = create-encode-handle(8) in
  pin val = -3.8 in
  let _ on h-save = encode-float64(h-save, val) in
  let b = get(h-save) in
  pin h = from-bytes(b) in
  let mval = decode-float64(h) in
  match mval {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-float(axiom-T(v))])
  }
}
