import {
  core.float.show {show-float},
  this.move.common.get {get-int64},
  this.move.common.put {put-float64},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-handle {get-handle},
  this.rule.marshal {Marshal, marshal},
  this.rule.put-handle {put-handle},
}

define _put(h: &put-handle, x: &float64): unit {
  put-float64(h, *x)
}

define _get(h: &get-handle): ?meta float64 {
  try v = get-int64(h) in
  Right(quote {magic cast(int64, float64, v)})
}

inline as-marshal: marshal(float64, float64) {
  Marshal of {
    put = _put,
    get = _get,
  }
}

define zen(): unit {
  pin val = -3.8 in
  match decode(as-marshal, encode(as-marshal, val, 8)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-float(v)])
  }
}
