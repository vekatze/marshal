import {
  core.int.show {show-int},
  this.move.common.get {get-int32},
  this.move.common.put {put-int32},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-kit {get-kit},
  this.rule.put-kit {put-kit},
  this.rule.sero {Sero, sero},
}

define _put(h: &put-kit, x: &int32): unit {
  put-int32(h, *x)
}

define _get(h: &get-kit): ?meta int32 {
  try v = get-int32(h) in
  Right(quote {v})
}

inline int32-sero: sero(int32, int32) {
  Sero of {
    put = _put,
    get = _get,
  }
}

define zen(): unit {
  pin val = 14909826 in
  match decode(int32-sero, encode(int32-sero, val, 8)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-int(sext-int32-int(v))])
  }
}
