import {
  core.box {axiom-T},
  core.int.show {show-int},
  this.move.common.get {get-int32},
  this.move.common.put {get, put-int32},
  this.move.create-get-handle {from-bytes},
  this.move.create-put-handle {create-put-handle},
  this.rule.get-handle {get-handle},
  this.rule.marshal {Marshal, marshal},
  this.rule.put-handle {put-handle},
}

define encode-int32(h: &put-handle, x: &int32): unit {
  put-int32(h, *x)
}

define decode-int32(h: &get-handle): ?meta int32 {
  try v = get-int32(h) in
  Right(quote {v})
}

inline as-marshal: marshal(int32, int32) {
  Marshal of {
    encode = encode-int32,
    decode = decode-int32,
  }
}

define zen(): unit {
  let h-save = create-put-handle(4) in
  pin val = 14909826 in
  let _ on h-save = encode-int32(h-save, val) in
  let b = get(h-save) in
  pin h = from-bytes(b) in
  let mval = decode-int32(h) in
  match mval {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-int(sext-int32-int(axiom-T(v)))])
  }
}
