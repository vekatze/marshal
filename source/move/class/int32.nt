import {
  core.box {axiom-T},
  core.int.show {show-int},
  this.move.common.get {proceed-int32},
  this.move.common.save {get, save-int32},
  this.move.create-decode-handle {from-bytes},
  this.move.create-encode-handle {create-encode-handle},
  this.rule.decode-handle {decode-handle},
  this.rule.encode-handle {encode-handle},
  this.rule.marshal {Marshal, marshal},
}

define encode-int32(h: &encode-handle, x: &int32): unit {
  save-int32(h, *x)
}

define decode-int32(h: &decode-handle): ?meta int32 {
  try v = proceed-int32(h) in
  Right(quote {v})
}

inline as-marshal: marshal(int32, int32) {
  Marshal of {
    encode = encode-int32,
    decode = decode-int32,
  }
}

define zen(): unit {
  let h-save = create-encode-handle(4) in
  pin val = 14909826 in
  let _ on h-save = encode-int32(h-save, val) in
  let b = get(h-save) in
  pin h = from-bytes(b) in
  let mval = decode-int32(h) in
  match mval {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-int(sext-int32-int(axiom-T(v)))])
  }
}
