import {
  core.int.show {show-int},
  this.move.common.get {get-int64},
  this.move.common.put {put-int64},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-handle {get-handle},
  this.rule.marshal {Marshal, marshal},
  this.rule.put-handle {put-handle},
}

define _put(h: &put-handle, x: &int64): unit {
  put-int64(h, *x)
}

define _get(h: &get-handle): ?meta int64 {
  try v = get-int64(h) in
  Right(quote {v})
}

inline as-marshal: marshal(int64, int64) {
  Marshal of {
    put = _put,
    get = _get,
  }
}

define zen(): unit {
  pin val = -9223372036854775807 in
  match decode(as-marshal, encode(as-marshal, val, 8)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-int(v)])
  }
}
