import {
  core.box {axiom-T},
  core.int.show {show-int},
  this.move.common.get {get-int8},
  this.move.common.put {get, save-int8},
  this.move.create-decode-handle {from-bytes},
  this.move.create-encode-handle {create-encode-handle},
  this.rule.decode-handle {decode-handle},
  this.rule.encode-handle {encode-handle},
  this.rule.marshal {Marshal, marshal},
}

define encode-int8(h: &encode-handle, x: &int8): unit {
  save-int8(h, *x)
}

define decode-int8(h: &decode-handle): ?meta int8 {
  try v = get-int8(h) in
  Right(quote {v})
}

inline as-marshal: marshal(int8, int8) {
  Marshal of {
    encode = encode-int8,
    decode = decode-int8,
  }
}

define zen(): unit {
  let h-save = create-encode-handle(4) in
  pin val = 127 in
  let _ on h-save = encode-int8(h-save, val) in
  let b = get(h-save) in
  pin h = from-bytes(b) in
  let mval = decode-int8(h) in
  match mval {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-int(sext-int8-int(axiom-T(v)))])
  }
}
