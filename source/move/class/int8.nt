import {
  core.int.show {show-int},
  this.move.common.get {get-int8},
  this.move.common.put {put-int8},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-kit {get-kit},
  this.rule.put-kit {put-kit},
  this.rule.sero {Sero, sero},
}

define _put(h: &put-kit, x: &int8): unit {
  put-int8(h, *x)
}

define _get(h: &get-kit): ?meta int8 {
  try v = get-int8(h) in
  Right(quote {v})
}

inline int8-sero: sero(int8, int8) {
  Sero of {
    put = _put,
    get = _get,
  }
}

define zen(): unit {
  pin val = 127 in
  match decode(int8-sero, encode(int8-sero, val, 4)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-int(sext-int8-int(v))])
  }
}
