import {
  core.box {axiom-T},
  core.rune.show {show-rune},
  this.move.class.int32 {decode-int32},
  this.move.common.put {get, put-int32},
  this.move.create-decode-handle {from-bytes},
  this.move.create-encode-handle {create-encode-handle},
  this.rule.decode-handle {decode-handle},
  this.rule.encode-handle {encode-handle},
  this.rule.marshal {Marshal, marshal},
}

define encode-rune(h: &encode-handle, x: &rune): unit {
  put-int32(h, magic cast(&rune, int32, x))
}

define decode-rune(h: &decode-handle): ?meta rune {
  try v = decode-int32(h) in
  Right(box {
    letbox v' = v in
    magic cast(int32, rune, v')
  })
}

inline as-marshal: marshal(rune, rune) {
  Marshal of {
    encode = encode-rune,
    decode = decode-rune,
  }
}

define zen(): unit {
  let h-save = create-encode-handle(4) in
  pin val = `あ` in
  let _ on h-save = encode-rune(h-save, val) in
  let b = get(h-save) in
  pin h = from-bytes(b) in
  let mval = decode-rune(h) in
  match mval {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-rune(axiom-T(v))])
  }
}
