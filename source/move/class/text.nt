import {
  this.move.common.get {get-text},
  this.move.common.put {put-text},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-kit {get-kit},
  this.rule.put-kit {put-kit},
  this.rule.sero {Sero, sero},
}

define _put(h: &put-kit, x: &text): unit {
  put-text(h, x)
}

define _get(h: &get-kit): ?meta text {
  try t = get-text(h) in
  Right(quote {t})
}

inline text-sero: sero(text, text) {
  Sero of {
    put = _put,
    get = _get,
  }
}

define zen(): unit {
  tie value = "枝ごとに花散りまがへ今はとて春の過ぎゆく道見えぬまで" in
  match decode(text-sero, encode(text-sero, value, 4)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [v])
  }
}
